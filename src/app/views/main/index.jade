doctype html

block html
    html(xmlns:ng="http://angularjs.org", lang="{{lang}}")
        block head
            head
                block head_inner
                    base(href="/")
                    - var title = title ? title : "Widget Regidium"
                    title(translate)= title

                    block base_meta
                        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
                        meta(http-equiv="Cache-Control", content="no-cache")
                        meta(http-equiv="Pragma", content="no-cache")
                        meta(http-equiv="Expires", content="0")

                    block base_style
                        link(rel="stylesheet", type='text/css', href="http://fonts.googleapis.com/css?family=Roboto:400,500,700&subset=latin,cyrillic-ext")
                        link(rel="stylesheet", type='text/css', href="/css/app.css")

                    block style
        block body
            body.ng-cloak(ng-cloak, style="background-color:transparent")
                block body_inner
                    .container
                        div(ng-view)

                block base_script
                    - if (env == "production")
                        script(src="//cdnjs.cloudflare.com/ajax/libs/headjs/1.0.3/head.load.min.js", type="text/javascript")
                    - else
                        script(src="/js/libs/headjs/head.load.min.js", type="text/javascript")
                    
                    script(src= (config.server.io_url + ':' + config.server.io_port + '/socket.io/socket.io.js'))
                    script(src='/js/loader-main-#{env}.js', type="text/javascript")

                block script